<h1>Discover Movies</h1>

<div id = "discover-button">
  <%= button_to "Discover Top Rated Movies", user_movies_path(@user), method: :get %>
</div>

<div id = "search-field">
  <%= form_with url: user_movies_path(@user), method: :get, local: true do %>
    <%= label_tag :query, "Search for a movie: " %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>